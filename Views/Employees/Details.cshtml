@model PayrollApp.Models.Employee

@{
    ViewData["Title"] = "Detalle";
    var status = Model.Status ? "Activo" : "Inactivo";
}

<h1>Detalle</h1>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Genero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            Salario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @status
        </dd>
    </dl>
</div>
<div class="form-group float-right">
    <a asp-action="Editar" class="btn btn-warning" asp-route-id="@Model.Id">Editar</a> |    
    <a class="btn btn-dark" asp-action="Index">Volver hacia atras</a>
</div>